<header class="FirstHeading"></header>

<div class="wrapper">

	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin" }) do |f| %>
	
	<h3><i class="fa fa-lock fa-4x"></i></h3>
	<h2 class="form-signin-heading">Forgot your password?</h2>

	<%= f.email_field :email, autofocus: true,class: "form-control",placeholder: "Email Address"%>

	<br>

	<div class="actions">
		<%= f.submit "Send my Password", class: "btn btn-lg btn-primary btn-block"%>
	</div> 
	<% end %>

	<%= render "devise/shared/links" %>
</div>