<header class="FirstHeading"></header>

<div class="wrapper">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signin" }) do |f| %>

  <h2 class="form-signin-heading">Sign up</h2>

  <%= f.email_field :email, autofocus: true,class: "form-control",placeholder: "Email Address"%>

  <br>

  <%= f.password_field :password, autocomplete: "off",class: "form-control",placeholder: "Password" %>
    <% if @minimum_password_length %>
    <em class="help-line">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />

  <%= f.password_field :password_confirmation, autocomplete: "off",class: "form-control",placeholder: "Retype Password" %>

  <br>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block"%>
  </div> 
  <% end %>

  <%= render "devise/shared/links" %>
</div>