<header class="FirstHeading"></header>

<div class="wrapper">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f| %>

  <h2 class="form-signin-heading">Please login</h2>

  <%= f.email_field :email, autofocus: true,class: "form-control",placeholder: "Email Address"%>

  <br>

  <%= f.password_field :password, autocomplete: "off",class: "form-control",placeholder: "Password" %>

  <% if devise_mapping.rememberable? -%>
  <input type="checkbox" value="remember-me" id="rememberMe" name="rememberMe">
  <%= f.label :remember_me, id: "rememberMe", value: "remember-me"%>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block"%>
  </div> 
  <% end %>

  <%= render "devise/shared/links" %>
</div>