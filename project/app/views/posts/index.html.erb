<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" >
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="site-heading">
          <h1>Startup Blog site</h1>
          <hr class="small">
          <span class="subheading">Together we can</span>
        </div>
      </div>
    </div>
  </div>
</header>


<p id="notice"><%= notice %></p>

<%- if user_signed_in?%>
<div class="center"> 
<h1>Welcome <%= current_user.email %></h1>
<% end %>
</div>
<div class="center">
<p>
  <%- if user_signed_in?%>
  <h3>
   <%= link_to 'New Post', new_post_path %></h3>
  <%- else%> 
  <h2><i class="fa fa-user"><%= link_to 'Log In', new_user_session_path %></i>
 </h2>
  </div>
  </p>
  <% end %> 
  
  <%- if user_signed_in?%><br>
  <h3>
  <i class="fa fa-sign-out">
  <%= link_to 'Log out', destroy_user_session_path, method: 'delete' %>
  </i></h3>
  <% end %>
 
  
</p>
</div>
<div class="center">
<h2>All Blogs</h2>
</div>
<div >
  
<div class="container" id="content" tabindex="-1">
<div class="center">

<% @posts.each do |post| %>
<h3><u><%= link_to post.title, post %></u></h3>
<div class="well well-lg">

 <p><%= truncate post.text %></p>
<p><%= time_ago_in_words post.created_at %> ago</p>
 
</div>

<% end %>
</div>
</div>



