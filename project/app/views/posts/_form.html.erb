  <% end %>

<div style="margin-left:30%">
  <div class="field">
  
    <%= f.label :title %><br>
    <%= f.text_field :title %>
    
  </div>
  <div class="field">
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  </div>
<% end %>


